<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="id" styleClass="cell_big_label">
                        <minWidth>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                    </Label>
                    <CheckBox fx:id="isDone" disable="true" mnemonicParsing="false" />

                    <Label fx:id="taskName" text="\$first" styleClass="cell_big_label" />
                </HBox>
            <HBox spacing="5">
                <Label text="Deadline:" />
                <Label fx:id="deadline" text="\$deadline" />
                <padding>
                    <Insets top="10.0" />
                </padding>
            </HBox>
        </VBox>

    </GridPane>

</HBox>
