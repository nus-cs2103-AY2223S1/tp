<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="taskPane" minHeight="50.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
 <VBox>
   <HBox spacing="5">
     <Label fx:id="id" maxWidth="30.0" minWidth="30.0" styleClass="cell_big_label" />
     <Label fx:id="taskname" styleClass="cell_big_label" text="\$task" wrapText="true" />
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
   </HBox>
   <Label fx:id="date" graphicTextGap="5.0" styleClass="cell_small_label" text="\$date" wrapText="true">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icon_calendar.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
   <Label fx:id="time" graphicTextGap="5.0" styleClass="cell_small_label" text="\$time" wrapText="true">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icon_clock.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
      <Label fx:id="recurrence" graphicTextGap="5.0" styleClass="cell_small_label" text="\$recurrence" wrapText="true">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/recurrence.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
 </VBox>
   <stylesheets>
      <URL value="@Fonts.css" />
      <URL value="@Theme.css" />
      <URL value="@Extensions.css" />
   </stylesheets>
</HBox>
