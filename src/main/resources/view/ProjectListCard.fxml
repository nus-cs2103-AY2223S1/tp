<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Button?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
            <Label fx:id="client" styleClass="cell_small_label" text="\$client" />
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Hyperlink fx:id="repository" styleClass="cell_small_label" text="\$repository" />
                <Button fx:id="copyRepoButton" mnemonicParsing="false" text="Copy URL" />
            </HBox>
            <Label fx:id="issueCount" styleClass="cell_small_label" text="\$issueCount" />
            <Label fx:id="deadline" styleClass="cell_small_label" text="\$deadline" />
        </VBox>
    </GridPane>
</HBox>
