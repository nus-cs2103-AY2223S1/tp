<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressBar?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@ProgressBar.css" />
    </stylesheets>
    <Label fx:id="progressBarLabel" styleClass="progress-bar-label" minWidth="250" wrapText="true">
        <padding>
            <Insets topRightBottomLeft="3" />
        </padding>
    </Label>
    <StackPane>
        <ProgressBar fx:id="progressBar" styleClass="progress-bar" maxWidth="Infinity"/>
        <HBox>
            <Label fx:id="progressPercentage" styleClass="progress-percentage" maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                <padding>
                    <Insets topRightBottomLeft="8" />
                </padding>
            </Label>
        </HBox>
    </StackPane>
</VBox>
