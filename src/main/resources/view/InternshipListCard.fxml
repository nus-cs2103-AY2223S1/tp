<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="company" text="\$first" styleClass="cell_big_label" />
        <Label fx:id="link" styleClass="cell_small_label" text="\$link" />
        <Pane maxHeight="-Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
        <Label fx:id="applicationStatus" styleClass="applicationStatus_label" text="\$applicationStatus" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label" text="Applied: " />
        <Label fx:id="appliedDate" styleClass="cell_small_label" text="\$appliedDate" />
      </HBox>
    </VBox>
  </GridPane>
</HBox>
