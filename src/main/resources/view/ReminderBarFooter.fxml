<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>


<GridPane styleClass="status-bar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
    </columnConstraints>
    <padding>
        <Insets bottom="5" left="10" right="10" top="5" />
    </padding>
    <HBox alignment="CENTER_LEFT">
        <ImageView fx:id="reminderIcon" fitWidth="16" fitHeight="18"/>
        <Label fx:id="reminderStatus" styleClass="cell_small_label" />
    </HBox>
</GridPane>
