<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane styleClass="stack-pane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <HBox>
      <children>
         <Label contentDisplay="CENTER" minWidth="-Infinity" styleClass="label-header" text="Financial Advisor Planner" textFill="WHITE" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
        <TextField fx:id="commandTextField" onAction="#handleCommandEntered" promptText="Enter command here..." HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
</StackPane>
