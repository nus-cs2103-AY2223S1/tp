<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="nameField" promptText="Name" style="-fx-background-radius: 30px;" />
                  <TextField fx:id="phoneField" promptText="Phone" style="-fx-background-radius: 30px;">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 30px;">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="countryField" promptText="Located country" style="-fx-background-radius: 30px;" />
                  <TextField fx:id="addressField" promptText="Address" style="-fx-background-radius: 30px;">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox>
                     <VBox.margin>
                        <Insets left="5.0" top="13.0" />
                     </VBox.margin>
                     <children>
                        <Button fx:id="addComponentButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addPetComponent" text="Add pet (CTRL+A)">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="deleteComponentButton" alignment="CENTER" contentDisplay="CENTER" layoutX="198.0" layoutY="10.0" mnemonicParsing="false" onAction="#deletePetComponent" text="Delete last pet (CTRL+D)">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #626567;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <content>
            <GridPane fx:id="componentPlaceholder" styleClass="grid-pane">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="ALWAYS" />
               </rowConstraints>
            </GridPane>
         </content>
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </VBox.margin>
      </ScrollPane>
   </children>
</VBox>
