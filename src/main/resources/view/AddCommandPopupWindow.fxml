<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root title="Add Command Window" type="Stage" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene stylesheets="@DarkTheme.css">
            <AnchorPane prefHeight="700.0" prefWidth="800.0">
            <children>
               <VBox AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <children>
                     <VBox>
                        <children>
                           <HBox style="-fx-background-radius: 30px;" styleClass="context-menu" VBox.vgrow="NEVER">
                              <children>
                                 <Label text="Adding: ">
                                    <HBox.margin>
                                       <Insets left="10.0" />
                                    </HBox.margin>
                                    <font>
                                       <Font name="System Bold" size="18.0" />
                                    </font>
                                 </Label>
                                 <Label fx:id="typeToBeAdded" text="\$to be added">
                                    <font>
                                       <Font name="System Bold" size="18.0" />
                                    </font>
                                 </Label>
                              </children>
                           </HBox>
                           <Label text="Press ENTER to go to the next input box; press ESC to close the window" textFill="RED">
                              <VBox.margin>
                                 <Insets left="15.0" right="15.0" top="10.0" />
                              </VBox.margin>
                           </Label>
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                     <StackPane fx:id="popupContentPlaceholder" style="-fx-background-radius: 30px; -fx-background-color: #626567;" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                           <Insets bottom="15.0" left="15.0" right="15.0" />
                        </VBox.margin>
                     </StackPane>
                  </children>
               </VBox>
               <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleInputCommand" text="Button" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />
            </children></AnchorPane>
        </Scene>
    </scene>
</fx:root>
