<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<?import java.net.URL?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@ProfileListCard.css" />
  </stylesheets>
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="name_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="name_label" />
      </HBox>
<!--      <Label fx:id="phone" text="\$phone" />-->
<!--      <Label fx:id="email" text="\$email" />-->
      <VBox spacing="6">
        <HBox fx:id="phone" alignment="CENTER_LEFT" spacing="10"/>
        <HBox fx:id="email" alignment="CENTER_LEFT" spacing="10"/>
        <HBox fx:id="telegram" alignment="CENTER_LEFT" spacing="10"/>
      </VBox>
      <FlowPane fx:id="tags" />
    </VBox>
  </GridPane>
</HBox>
