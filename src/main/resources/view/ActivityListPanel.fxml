<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <VBox maxWidth="400.0" minWidth="300.0" HBox.hgrow="ALWAYS">
    <ListView fx:id="activityListView" minWidth="350.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin></ListView>
  </VBox>
  <AnchorPane fx:id="selectedActivityPanelPlaceholder" minHeight="-Infinity" minWidth="-Infinity" opacity="0.7" prefWidth="200.0" HBox.hgrow="ALWAYS">
      <HBox.margin>
         <Insets bottom="10.0" right="10.0" top="25.0" />
      </HBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding></AnchorPane>
</HBox>
