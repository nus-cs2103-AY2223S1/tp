<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root maxHeight="500.0" maxWidth="800.0" minWidth="800.0" resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene stylesheets="@DarkTheme.css">

      <HBox fx:id="helpMessageContainer" alignment="CENTER" styleClass="result-display">
        <children>
               <TextArea id="resultDisplay" fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="220.0" styleClass="result-display" HBox.hgrow="ALWAYS" />
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
