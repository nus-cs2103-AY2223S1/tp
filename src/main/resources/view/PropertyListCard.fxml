<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.shape.Circle?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <HBox alignment="CENTER_LEFT">
      <padding>
        <Insets top="20" right="20" left="20" />
      </padding>
      <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
        <padding>
          <Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <HBox spacing="5" alignment="CENTER_LEFT">
          <Label fx:id="id" styleClass="cell_big_label">
            <minWidth>
              <!-- Ensures that the label text is never truncated -->
              <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
          </Label>
          <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        </HBox>
        <Label fx:id="price" styleClass="cell_small_label" text="\$price" />
        <FlowPane fx:id="tags" />
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      </VBox>
    </HBox>
  </GridPane>
  <VBox>
    <Label fx:id="propertyType" styleClass="cell_big_label" text="\$propertyType" textAlignment="RIGHT" />
    <Label fx:id="propertyStatus" styleClass="cell_big_label" text="\$propertyStatus" textAlignment="RIGHT" />
  </VBox>
</HBox>
