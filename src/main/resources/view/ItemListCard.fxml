<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<HBox xmlns:fx="http://javafx.com/fxml/1" id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8">
  <VBox alignment="CENTER_LEFT">
    <padding>
      <Insets top="5" right="5" bottom="5" left="15"/>
    </padding>
    <HBox spacing="5" alignment="CENTER_LEFT">
      <Label fx:id="id">
        <minWidth>
          <!-- Ensures that the label text is never truncated -->
          <Region fx:constant="USE_PREF_SIZE"/>
        </minWidth>
      </Label>
      <Label fx:id="name" text="\$first"/>
      </HBox>
      <Label fx:id="quantityAndUnit" text="\$quantityAndUnit"/>
      <Label fx:id="bought" text="\$bought"/>
      <Label fx:id="expiry" text="\$expiry"/>
    <FlowPane fx:id="tags" />
  </VBox>
</HBox>
