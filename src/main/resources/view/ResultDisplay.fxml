<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="placeHolder" prefHeight="100.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <HBox alignment="CENTER" styleClass="result-display" HBox.hgrow="ALWAYS">
      <children>
        <ImageView fx:id="avatarDisplay" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" scaleX="0.9" scaleY="0.9" />
        <TextArea fx:id="resultDisplay" editable="false" maxWidth="1.7976931348623157E308" styleClass="text-area" wrapText="true" HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </HBox.margin>
        </TextArea>
      </children>
      <HBox.margin>
        <Insets />
      </HBox.margin>
    </HBox>
  </children>
</HBox>
