<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>

      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>

      <HBox>
        <padding>
          <Insets top="3" bottom="3" />
        </padding>
        <FlowPane fx:id="tags" />
      </HBox>

      <HBox fx:id="phoneContainer" alignment="CENTER_LEFT">
        <padding>
          <Insets top="2" right="0" bottom="2" left="-3" />
        </padding>
        <children>
          <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../images/phone.png" />
            </image>
          </ImageView>
          <HBox>
            <padding>
              <Insets top="3" right="1" bottom="1" left="0" />
            </padding>
            <Label fx:id="phone" styleClass="cell_small_label" wrapText="true" />
          </HBox>
        </children>
      </HBox>

      <HBox fx:id="addressContainer" alignment="CENTER_LEFT">
        <padding>
          <Insets top="0" right="0" bottom="2" left="-1" />
        </padding>
        <children>
          <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../images/address.png" />
            </image>
          </ImageView>
          <HBox>
            <padding>
              <Insets top="0" right="1" bottom="1" left="0" />
            </padding>
            <Label fx:id="address" styleClass="cell_small_label" wrapText="true" />
          </HBox>
        </children>
      </HBox>

      <HBox fx:id="emailContainer" alignment="CENTER_LEFT">
        <padding>
          <Insets top="0" right="1" bottom="1" left="1" />
        </padding>
        <children>
          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../images/email.png" />
            </image>
          </ImageView>
          <HBox>
            <padding>
              <Insets top="0" right="1" bottom="1" left="3" />
            </padding>
            <Label fx:id="email" styleClass="cell_small_label" wrapText="true" />
          </HBox>
        </children>
      </HBox>

      <HBox>
        <padding>
          <Insets top="3" bottom="3" />
        </padding>
        <FlowPane fx:id="assignments" />
      </HBox>

      <HBox>
        <padding>
          <Insets top="3" bottom="3" />
        </padding>
        <FlowPane fx:id="personGroup" />
      </HBox>

    </VBox>
  </GridPane>
</HBox>
