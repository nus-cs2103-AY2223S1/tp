<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<?import javafx.scene.control.SplitPane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" >
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      </FlowPane>
      <VBox fx:id="personDetailsBox" alignment="CENTER_LEFT" minHeight="105" minWidth="300" GridPane.columnIndex="0">
        <SplitPane>
          <VBox fx:id="personDetails" alignment="CENTER_LEFT" minHeight="105" minWidth="300" prefHeight="150" prefWidth="300" GridPane.columnIndex="0">
            <padding>
              <Insets top="10" right="10" bottom="10" left="30" />
            </padding>
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true"/>
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true"/>
            <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true"/>
          </VBox>
          <VBox fx:id="personDetails2" alignment="CENTER_LEFT" minHeight="105" minWidth="150" maxWidth="150" GridPane.columnIndex="0">
            <padding>
              <Insets top="10" right="10" bottom="10" left="30" />
            </padding>
            <FlowPane styleClass="cell_label_tags">
              <padding>
                <Insets top="3" right="3" bottom="3" left="3" />
              </padding>
              <Label fx:id="income" text="\$income" />
            </FlowPane>

            <FlowPane styleClass="cell_label_tags">
              <padding>
                <Insets top="3" right="3" bottom="3" left="3" />
              </padding>
              <Label fx:id="meetingDate" text="\$meetingDate" />
            </FlowPane>

          </VBox>
        </SplitPane>
      </VBox>
    </VBox>
  </GridPane>
</HBox>
