<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="136.0" prefWidth="259.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
            <Label fx:id="minecraftName" styleClass="cell_big_label" text="\$mcName" />
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" />
         <HBox>
            <children>
               <Label styleClass="cell_small_label" text="Contact:" />
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
                  <HBox.margin>
                     <Insets left="8.0" />
                  </HBox.margin>
               </Label>
            <Label fx:id="email" styleClass="cell_small_label" text="\$email">
                  <HBox.margin>
                     <Insets left="8.0" />
                  </HBox.margin>
               </Label>
            </children>
         </HBox>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
         <Label fx:id="socials" styleClass="cell_small_label" text="\$socials" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
