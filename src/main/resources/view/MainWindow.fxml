<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="JerylFypManager" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="welcomeBoxPlaceholder" style="-fx-background-color: #d9d9d9;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <VBox fx:id="studentList" minWidth="340" prefWidth="340" style="-fx-background-color: #271F1F;" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <padding>
            <Insets bottom="20" left="10" right="10" top="20" />
          </padding>
               <HBox VBox.vgrow="ALWAYS">
                  <children>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <StackPane fx:id="uncompletedStudentListTitlePlaceholder" style="-fx-background-color: #d9d9d9;" styleClass="pane-with-border" VBox.vgrow="NEVER">
                              <padding>
                                 <Insets bottom="5" left="10" right="10" top="5" />
                              </padding>
                              <VBox.margin>
                                 <Insets bottom="5.0" left="5.0" right="5.0" />
                              </VBox.margin>
                           </StackPane>
                      <StackPane fx:id="uncompletedStudentListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                        </children>
                     </VBox>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <StackPane fx:id="completedStudentListTitlePlaceholder" style="-fx-background-color: #d9d9d9;" styleClass="pane-with-border" VBox.vgrow="NEVER">
                              <padding>
                                 <Insets bottom="5" left="10" right="10" top="5" />
                              </padding>
                              <VBox.margin>
                                 <Insets bottom="5.0" left="5.0" right="5.0" />
                              </VBox.margin>
                           </StackPane>
                          <StackPane fx:id="completedStudentListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
        </VBox>

                    <StackPane fx:id="resultDisplayPlaceholder" maxHeight="150.0" minHeight="150.0" prefHeight="150.0" style="-fx-background-color: #271F1F;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="commandBoxPlaceholder" style="-fx-background-color: #271F1F;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
