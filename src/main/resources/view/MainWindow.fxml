<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root minHeight="800" minWidth="800" onCloseRequest="#handleExit" title="CinternS" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/internship.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox maxHeight="1000.0">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <HBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
              <VBox fx:id="applicationList" alignment="TOP_CENTER" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                     <Label fx:id="id1" styleClass="label-bright-large" text="Applications">
                        <font>
                           <Font name="Segoe UI Semibold" size="14.0" />
                        </font>
                        <padding>
                           <Insets left="10.0" right="10.0" />
                        </padding>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Label>
                <StackPane fx:id="applicationListPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </VBox>

              <VBox fx:id="interviewList" alignment="TOP_CENTER" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                 <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                 </padding>
                 <Label fx:id="id" styleClass="label-bright-large" text="Interviews">
                    <font>
                       <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                    <VBox.margin>
                       <Insets bottom="10.0" />
                    </VBox.margin>
                    <padding>
                       <Insets left="10.0" right="10.0" />
                    </padding>
                 </Label>
                 <StackPane fx:id="interviewListPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </VBox>
           </children>
        </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
