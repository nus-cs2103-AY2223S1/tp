<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="NUScheduler" minWidth="800" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/calendar.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <VBox minWidth="500">
          <children>
            <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
              </padding>
            </StackPane>
            <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                       minHeight="100" prefHeight="100" maxHeight="100">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
              </padding>
            </StackPane>
          </children>
        </VBox>
        <HBox VBox.vgrow="ALWAYS" >
          <VBox fx:id="profileList" styleClass="pane-with-border" minWidth="300" HBox.hgrow="ALWAYS">
            <padding>
              <Insets top="5" right="10" bottom="10" left="10" />
            </padding>
            <StackPane fx:id="profileListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
          </VBox>

          <VBox styleClass="pane-with-border" minWidth="500" HBox.hgrow="ALWAYS">
            <padding>
              <Insets top="5" right="10" bottom="5" left="10" />
            </padding>
            <children>
              <StackPane fx:id="eventListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
            </children>
          </VBox>
        </HBox>
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
