<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="studentId" styleClass="cell_small_label" text="\$studentId" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="gitName" styleClass="cell_small_label" text="\$gitName" />
      <Label fx:id="handle" styleClass="cell_small_label" text="\$handle" />
    </VBox>
    <VBox alignment="TOP_RIGHT" minHeight="105" GridPane.columnIndex="1">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_RIGHT">
        <Label fx:id="module" text="\$module" styleClass="cell_big_label" />
      </HBox>
      <Label alignment="TOP_RIGHT" fx:id="attendanceRate"/>
      <FlowPane alignment="TOP_RIGHT" fx:id="attendances" />
      <Label alignment="TOP_RIGHT" fx:id="participationRate"/>
      <FlowPane alignment="TOP_RIGHT" fx:id="participations" />
      <Label alignment="TOP_RIGHT" fx:id="assignmentRate"/>
      <FlowPane alignment="TOP_RIGHT" fx:id="assignments" />
    </VBox>
  </GridPane>
</HBox>
