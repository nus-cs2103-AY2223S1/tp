@startuml
!include style.puml
skinparam ClassFontColor #000000
skinparam ClassBorderColor #000000

title Initial state

package States {
    class State1 as "__ab0:Friday__"
    class State2 as "__ab1:Friday__"
    class State3 as "__ab2:Friday__"
}
State1 -[hidden]right-> State2
State2 -[hidden]right-> State3
hide State2
hide State3

class Pointer as "Current State" #FFFFF
Pointer -up-> State1
@end
