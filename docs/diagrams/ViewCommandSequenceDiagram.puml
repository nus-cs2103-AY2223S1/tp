@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":ViewCommand" as ViewCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
participant "student:Student" as Student LOGIC_COLOR
participant "smd:StudentModuleData" as SMD LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> ViewCommand: execute(model)
activate ViewCommand

ViewCommand -> Model: getFocusedClass()
activate Model
Model --> ViewCommand: focusedClass
deactivate Model

ViewCommand -> Model: getFilteredStudentList()
activate Model
Model --> ViewCommand: lastShownList
deactivate Model

ViewCommand -> Student: findStudentModuleData(focusedClass)
activate Student
Student --> ViewCommand: smd
deactivate Student

ViewCommand -> SMD: getSessionDataList()
activate SMD
SMD --> ViewCommand: sessionDataList
deactivate SMD

ViewCommand -> ViewCommand: getCommandMessage(sessionDataList, student)
activate ViewCommand
ViewCommand --> ViewCommand: message
deactivate ViewCommand

create CommandResult
ViewCommand -> CommandResult: message
activate CommandResult

CommandResult --> ViewCommand
deactivate CommandResult

ViewCommand -->[: result

@enduml
