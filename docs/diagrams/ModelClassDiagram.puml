@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniqueCustomerList
Class UniqueCommissionList
Class Customer
Class Address
Class Email
Class Name
Class Phone
Class Tag
Class Commission
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *---> "1" UniqueCustomerList
UniqueCustomerList --> "~*" Customer: all
Customer *--> Name
Customer *--> Phone
Customer *--> Email
Customer *--> "0..1" Address
Customer *--> "*" Tag
Customer *--> UniqueCommissionList

UniqueCommissionList --> "~*" Commission : all
ModelManager --> "~*" Commission : filtered
ModelManager --> "0..1" Commission : selected
ModelManager --> "0..1" Customer : selected
AddressBook *--> "1" UniqueCommissionList: full list

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager -> "~*" Customer: filtered
@enduml
