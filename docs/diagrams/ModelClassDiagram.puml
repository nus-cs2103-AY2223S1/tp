@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Class "<<interface>>\nReadOnlyInternshipBook" as ReadOnlyInternshipBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class InternshipBook
Class ModelManager
Class UserPrefs

Class UniqueInternshipList
Class ApplicationProcess
Class Date
Class Email
Class Internship
Class Name
Class Phone
Class Position
Class Remark
Class Tag
Class Website

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

InternshipBook .up.|> ReadOnlyInternshipBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyInternshipBook
ModelManager -left-> "1" InternshipBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

InternshipBook *--> "1" UniqueInternshipList
ModelManager -->"~* filtered" Internship
UniqueInternshipList --> "~* all" Internship
Internship *--> Name
Internship *--> Position
Internship *--> ApplicationProcess
Internship *--> Date
Internship *--> Phone
Internship *--> Email
Internship *--> Remark
Internship *--> Website
Internship *--> "*" Tag


@enduml
