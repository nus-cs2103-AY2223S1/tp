@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyCommandHistory" as ReadOnlyCommandHistory
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs

Package Person as PersonPackage{
Class Person
Class Address
Class Email
Class Name
Class Phone
Class Income
Class Monthly
Class HiddenModel2 #FFFFFF
Class HiddenModel3 #FFFFFF
}

Package Tag as TagPackage{
Class "{abstract}\nTag" as Tag
Class NormalTag
Class PlanTag
Class RiskTag
Class ClientTag
Class SpecialTag
}

Package Appointment as AppointmentPackage{
Class Appointment
Class Location
Class DateTime
}

Class "<<interface>>\nModel" as Model
Class AddressBook
Class CommandHistory
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class Person
Class Address
Class Email
Class Name
Class Phone
Class "{abstract}\nTag" as Tag
Class Income
Class Monthly
Class Appointment
Class NormalTag
Class PlanTag
Class RiskTag
class ClientTag
Class Location
Class DateTime


Class CommandHistoryList
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook
CommandHistory .up.|> ReadOnlyCommandHistory
ModelManager .up..|> Model
Model .down.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
Model .right> ReadOnlyCommandHistory
ModelManager --> "1" AddressBook
ModelManager --> "1" UserPrefs
ModelManager -right-> "1" CommandHistory
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
UniquePersonList ---> "~* all" Person
Person *--> "1" Name
Person *--> "1" Phone
Person *--> "1" Email
Person *--> "1" Address
Person *--> "1" Income
Person *--> "1" Monthly
Person *--> "0..3" Appointment
Person *-right-> "1" PlanTag
Person *-right-> "1" RiskTag
Person *-right-> "1" ClientTag
Person *-right-> "0..5" NormalTag
Appointment *--> "1" Location
Appointment *--> "1" DateTime

CommandHistory *--> "1" CommandHistoryList

ReadOnlyAddressBook -[hidden]right> ReadOnlyUserPrefs
ReadOnlyUserPrefs -[hidden]right-> ReadOnlyCommandHistory

AddressBook -[hidden]right> UserPrefs
UserPrefs -[hidden]right-> CommandHistory

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email



NormalTag -up-|> Tag
SpecialTag -up-|> Tag
RiskTag -up-|> SpecialTag
PlanTag -up-|> SpecialTag
ClientTag -up-|> SpecialTag

ModelManager -->"~* filtered" Person
@enduml
